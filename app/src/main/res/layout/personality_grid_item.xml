        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorEnfp"
            android:paddingTop="30dp"
            android:paddingBottom="30dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/itemGridLayout">

            <TextView
                android:text="INTJ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:contentDescription="Type Description"
                android:layout_gravity="center"
                android:id="@+id/personality_type"
                android:textColor="@color/lightText"
                android:textSize="26sp"
                android:textAlignment="center"/>

            <TextView
                android:text="90 %"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_alignBottom="@+id/personality_type"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:contentDescription="Perc Description"
                android:textColor="@color/lightText"
                android:id="@+id/personality_perc"
                android:textAlignment="center"
                android:textSize="18sp"/>
        </LinearLayout>



</RelativeLayout>